{
  "manifest_version": 2,
  "name": "Media Stream Detector",
  "version": "1.0",
  "description": "Detects and collects M3U8 streams and subtitle files from web pages",
  "browser_specific_settings": {
    "gecko": {
      "id": "media-stream-detector@example.com",
      "strict_min_version": "57.0"
    }
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "browser-polyfill.js",
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon-48.png",
      "96": "icon-96.png",
      "128": "icon-128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "browser-polyfill.js",
        "content.js"
      ]
    }
  ],
  "content_security_policy": "script-src 'self'; object-src 'self';",
  "icons": {
    "48": "icon-48.png",
    "96": "icon-96.png",
    "128": "icon-128.png"
  }
}